---
import GlasgowComponent from "./calculators/GlasgowComponent.vue";
import IndiceShocKComponent from "./calculators/IndiceShocKComponent.vue";
import MadridDirectComponent from "./calculators/MadridDirectComponent.vue";
import ParcklandComponent from "./calculators/ParcklandComponent.vue";
import QsofaComponent from "./calculators/QsofaComponent.vue";
import TraumaScoreComponent from "./calculators/TraumaScoreComponent.vue";

---

<style>

  .links {
    display: grid;
    grid-template-columns: repeat(2, minmax(140px, 1fr));
    gap: 1rem;
    width: 100%;
    max-width: 100vw;


  }


  @media (max-height: 768px) {
    .links {
    min-width: 100vw;
    display: flex;
    flex-direction: column;
  }
    h1 {
      font-size: 2rem;
    }

    .btn {
      padding: 0.75rem;
      font-size: 0.9rem;
    }

  }
</style>

<div class="container">
  <h1>Escalas</h1>
  <div class="links">
    <GlasgowComponent client:load></GlasgowComponent>
    <IndiceShocKComponent client:load></IndiceShocKComponent>
    <MadridDirectComponent client:load></MadridDirectComponent>
    <ParcklandComponent client:load></ParcklandComponent>
    <QsofaComponent client:load></QsofaComponent>
    <TraumaScoreComponent client:load></TraumaScoreComponent>
  </div>
</div>
