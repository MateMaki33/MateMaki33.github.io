---
import crisisData from "../collections/crisis.json";
const data = crisisData;
---


<div class="container">
  <h1>Código Crisis</h1>

  <div class="grid">
    <button class="btn" onclick="modal_inclusion.showModal(); modal_inclusion.scrollTop = 0;">Criterios de Inclusión</button>
    <button class="btn" onclick="modal_hosp_ped.showModal(); modal_hosp_ped.scrollTop = 0;">Hospitales Pediátricos</button>
    <button class="btn" onclick="modal_hosp_gen.showModal(); modal_hosp_gen.scrollTop = 0;">Hospitales Generales</button>
  </div>
</div>

<dialog id="modal_inclusion">
  <h2>Criterios de Inclusión</h2>
  <ul>
    {data.codigo_donante.criterios_inclusion.map(c => (
      <li>{c}</li>
    ))}
  </ul>
  <form method="dialog"><button class="btn btn-close">Cerrar</button></form>
</dialog>

<dialog id="modal_hosp_ped">
  <h2>Hospitales Pediátricos</h2>
  <ul>
    {data.codigo_donante.traslado.hospitales_pediatricos.map(h => (
      <li>{h}</li>
    ))}
  </ul>
  <form method="dialog"><button class="btn btn-close">Cerrar</button></form>
</dialog>

<dialog id="modal_hosp_gen">
  <h2>Hospitales Generales</h2>
  <ul>
    {data.codigo_donante.traslado.hospitales.map(h => (
      <li>{h}</li>
    ))}
  </ul>
  <form method="dialog"><button class="btn btn-close">Cerrar</button></form>
</dialog>
