---
import sections from '../data/sections';
---

<style>
  /* Solo para animaci√≥n de entrada suave */

  .links {
    display: grid;
    grid-template-columns: repeat(2, minmax(140px, 1fr));
    gap: 1rem;
    width: 100%;
    max-width: 100vw;
    overflow: hidden;
  }
  dialog[open] {
    animation: fadeInScale 0.3s ease-out;
  }

  strong{
    color: var(--neon-orange);
  }

  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
</style>

<div class="container">
  <h1>Procedimientos 112 CAM</h1>
  <div class="links">
    {sections.map(({ path, label }) => (
      <a class="btn" href={path}>{label}</a>
    ))}
  </div>
</div>

