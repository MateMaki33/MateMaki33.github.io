---
import {ClientRouter} from "astro:transitions"
import NavMenuComponent from "../components/NavMenuComponent.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="author" content="José Luis Díaz García"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>MadRescue112</title>
    <ClientRouter/>
  </head>
  <body>
    <NavMenuComponent></NavMenuComponent>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    /* Color palette */
    --color-bg-start: #1a002b;
    --color-bg-end: #0c0015;
    --color-scroll-track: #1a1a1a;
    --color-scroll-thumb: #9333ea;
    --color-scroll-thumb-hover: #c084fc;
    --color-card-bg: #2a003f;
    --color-card-border: #9333ea;
    --color-btn-border: #a855f7;
    --color-btn-text: #e9d5ff;
    --color-btn-hover-bg: #a855f7;
    --color-btn-hover-text: #0c0015;
    --color-headline-gradient-start: #c084fc;
    --color-headline-gradient-end: #a855f7;
    --color-text: #ffffff;
    --color-subtitle: #c084fc;
     --neon-orange: #ff9900;
    --neon-glow: #ffaa33;
    --bg-dark: #1a1a1a;
    --text-light: #fff8f0;

    /* Typography */
    --font-size-base: 16px;
    --font-size-h1: 3.5rem;
    --font-size-h2: 2.25rem;
    --font-size-li: 1.5rem;
    --font-weight-bold: bold;

    /* Radius & Spacing */
    --radius-default: 12px;
    --radius-card: 16px;
    --padding-container: 2rem;
    --padding-card: 1rem;
    --padding-btn: 1rem;
    --gap-grid: 1rem;

    /* Shadows */
    --shadow-card: 0 0 15px rgba(147, 51, 234, 0.3);
    --shadow-btn: 0 0 8px rgba(168, 85, 247, 0.3);
    --shadow-btn-hover: 0 0 20px #c084fc;
    --shadow-dialog: 0 0 20px rgba(147, 51, 234, 0.5);
  }

  html,
  body {
    margin: 0;
    padding: 0;
    height: 100%;
    font-size: var(--font-size-base);
    background: radial-gradient(circle at center, var(--color-bg-start) 0%, var(--color-bg-end) 100%);
    overflow-y: auto;
  }

  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }

  ::-webkit-scrollbar-track {
    background: var(--color-scroll-track);
    border-radius: var(--radius-default);
  }

  ::-webkit-scrollbar-thumb {
    background: var(--color-scroll-thumb);
    border-radius: var(--radius-default);
    border: 2px solid var(--color-scroll-track);
  }

  ::-webkit-scrollbar-thumb:hover {
    background: var(--color-scroll-thumb-hover);
  }

  a{
    color: white;

    &:hover{
      color: var(--neon-orange);
    }
  }

  .container {
    max-width: 100vw;
    min-height: 100vh;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: var(--color-text);
    gap: 1rem;
    overflow-y: auto;
  }

  h1 {
    text-align: center;
    margin-bottom: 1rem;
    background: linear-gradient(90deg, var(--color-headline-gradient-start), var(--color-headline-gradient-end));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-size: var(--font-size-h1);
  }

  .grid {
    max-width: 80vw;
    max-height: fit-content;
    display: grid;
    place-content: center;
    gap: var(--gap-grid);
    max-width: 100%;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); 
    padding: 1rem;
    box-sizing: border-box;
  }

  .card {
    background: var(--color-card-bg);
    border: 1px solid var(--color-card-border);
    border-radius: var(--radius-card);
    padding: var(--padding-card);
    box-shadow: var(--shadow-card);
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    overflow-y: auto;
    height: fit-content;
  }

  h2 {
    color: var(--color-text);
    font-size: var(--font-size-h2);
    margin-bottom: 0.75rem;
  }

  h3 {
    color: var(--color-subtitle);
    margin: 0.5rem 0;
  }

  ul {
    list-style: square;
    padding-left: 1.25rem;
    margin-top: 0.5rem;
  }

  ul li {
    margin-top: 1rem;
    font-size: var(--font-size-li);
  }

  .subsection {
    margin-bottom: 1rem;
  }

  .btn {
    background: linear-gradient(135deg, var(--color-card-bg), #1f0033);
    border: 2px solid var(--color-btn-border);
    color: var(--color-btn-text);
    padding: var(--padding-btn);
    text-decoration: none;
    font-weight: var(--font-weight-bold);
    border-radius: var(--radius-default);
    transition: all 0.3s ease;
    box-shadow: var(--shadow-btn);
    max-width: 100%;
    width: 100%; 
    box-sizing: border-box;
    font-size: 1.1rem; 
    text-align: center;
  }

  .btn:hover {
    background: var(--color-btn-hover-bg);
    color: var(--color-btn-hover-text);
    box-shadow: var(--shadow-btn-hover);
    cursor: pointer;
  }

  dialog {
    background: var(--color-card-bg);
    color: var(--color-text);
    border: 2px solid var(--color-card-border);
    border-radius: var(--radius-default);
    padding: 2rem;
    max-width: 90vw;
    box-shadow: var(--shadow-dialog);
    max-height: 70vh;
  }

  dialog::backdrop {
    background: rgba(0, 0, 0, 0.75);
  }

  dialog h2 {
    margin-top: 0;
  }

  dialog ul {
    padding-left: 1.2rem;
  }

  .calc-buttons{
    display: flex;
    gap: 1rem;
    
    @media(max-width: 768px){
      flex-direction: column;
    }
  }
  input, select {
  padding: 0.75rem;
  border-radius: 8px;
  border: 1px solid var(--neon-glow);
  background-color: #1a1a1a;
  color: #fff7e6;
  height: 3rem;
  font-size: 1.25rem;
  box-shadow: 0 0 5px var(--neon-glow);
  transition: all 0.3s ease;
}

input:focus, select:focus {
  outline: none;
  border-color: var(--neon-glow);
  box-shadow: 0 0 12px var(--neon-glow);
}
</style>

